<div class="container centered-box h-100">
  <div class="row mt-5">
    <div class="col centered-box flex-column mb-5">

      <img src="https://pngimg.com/uploads/minions/minions_PNG65.png" width="300">
      <h1 class="text-center my-4 fs-3">
        Invite an Amigo to join your Trip !
        </h1>
        <%= form_with url: trip_invite_path, method: :post, class: "d-flex" do %>
          <%= text_field_tag :address,
            params[:address],
            class: "form-control",
            placeholder: "my-amigo@email.com"
          %>
          <%= submit_tag "Invite", class: "btn btn-blue" %>
        <% end %>
        <div class="text-center">
          <%= link_to 'Back', trips_path, class:"btn btn-white my-4" %>
        </div>
      </div>
    </div>
</div>
