          <input type="submit" value="Get the weather" class="btn btn-primary ms-3">
        </form>
        <div class="card mt-4 mb-5">
          <div class="card-body">
            <h1>Weather in <span data-weather-target="displayCity">
                <!-- TODO: CITY NAME -->
              </span></h1>
            <h3 class="text-secondary" data-weather-target="date">
              <!-- TODO: DATE -->
            </h3>
            <div>
              <p data-weather-target="desc">
                <!-- TODO: DESCRIPTION -->
              </p>
              <div class="d-flex">
                <img src="" alt="Weather Icon" data-weather-target="img">
                <h2 data-weather-target="temp">
                  <!-- TODO: TEMPERATURE -->
                </h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
