          <% end %>
        </div>
        -->
        </div>
      </div>
      <div class="col-8 d-flex flex-column justify-content-center">
        <h3><strong><%= @trip.destination %></strong></h3>
        <h6 class="mb-2"><%= @trip.start_date.strftime("%d %b") %> - <%= @trip.end_date.strftime("%d %b %Y") %>
        </h6>
        <div class="d-flex">
          <h6 class="me-1 fw-bold d-block rounded-4 border border-secondary px-2 py-1"><i class="fa-solid fa-users text-secondary"></i> <%= @trip.users.count %></h6>
          <h6 class="fw-bold d-block rounded-4 border border-secondary px-2 py-1"><i class="fa-solid fa-person-hiking text-secondary"></i> <%= @trip.activities.count %></h6>
        </div>
      </div>
    </div>
    <div class="row my-2 justify-content-center position-absolute trip-card-avatars">
      <% @trip.users.each do |user| %>
        <div class="col-2">
        <%= cl_image_tag user.photo.key, class:"avatar-sm overflow-visible" %>
        </div>
      <% end %>
        <div class="col-2">
          <div class="avatar-sm d-flex align-items-center justify-content-center">
            <p class="fs-1 p-0 m-0 text-blue">
             <%= link_to trip_invite_path(@trip), class: "dropdown-item" do %>
              <i class="fa-solid fa-plus"></i>
            <% end %>
            </p>
          </div>
        </div>
        <div class="col-1">
     </div>
    </div>
  </div>

  <div class="container mt-5 pt-3">
    <div class="row d-flex justify-content-center align-items-center text-center">
      <div class="col-6 d-flex justify-content-center align-items-center ps-0">
        <div class="btn-activity d-flex justify-content-center align-items-center rounded-4 my-2">
          <%= link_to trip_activities_path(@trip) do %>
          <i class="fa-solid fa-person-hiking icon-size text-light"></i>
          <p class="mt-2 mb-0 text-light">Activities</p>
          <% end %>
        </div>
      </div>
      <div class="col-6 d-flex justify-content-center align-items-center pe-0">
        <div class="btn-random d-flex justify-content-center align-items-center rounded-4 my-2">
          <%= link_to trip_random_wheel_path(@trip) do %>
            <i class="fa-solid fa-dice icon-size"></i>
            <p class="mt-2 mb-0 text-light">Randomizer</p>
          <% end %>
        </div>
      </div>
      <div class="col-6 d-flex justify-content-center align-items-center ps-0 mt-2">
        <div class="btn-trip d-flex justify-content-center align-items-center rounded-4">
          <%= link_to trip_random_wheel_path(@trip) do %>
            <i class="fa-solid fa-plane-up icon-size"></i>
            <p class="mt-2 mb-0 text-light">My trip</p>
          <% end %>
        </div>
      </div>
      <div class="col-6 d-flex justify-content-center align-items-center pe-0 mt-2">
        <div class="btn-bank d-flex justify-content-center align-items-center rounded-4">
          <%= link_to trip_random_wheel_path(@trip) do %>
            <i class="fa-solid fa-piggy-bank icon-size"></i>
            <p class="mt-2 mb-0 text-light">Amigo Bank</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>