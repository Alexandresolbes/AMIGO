<h1>Invite a friend to join you in your trip</h1>

<div class="container">
  <div class="row">
    <div class="col"></div>
      <%= form_with url: trip_invite_path, method: :post, class: "d-flex" do %>
        <%= text_field_tag :address,
          params[:address],
          class: "form-control",
          placeholder: "Invite a friend"
        %>
        <%= submit_tag "Invite", class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Back', trips_path  %>
    </div>
  </div>
</div>
