<div class="row">
    <div class="col-12 px-3">
    <h1 class="text-center mt-1 mb-3">Create a bill</h1>
      <%= simple_form_for [trip, wallet, @bill] do |f| %>
      
      <h6>Choose the type of bill</h6>
        <ul class="nav nav-pills mb-3" id="bank-pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active me-1" id="credit-tab" data-bs-toggle="pill" data-bs-target="#credit" type="button" role="tab" aria-controls="credit" aria-selected="true">I lend ðŸ˜Ž</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="debit-tab" data-bs-toggle="pill" data-bs-target="#debit" type="button" role="tab" aria-controls="debit" aria-selected="false">I borrow ðŸ™ƒ</button>
          </li>
        </ul>
      <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="credit" role="tabpanel" aria-labelledby="credit-tab" tabindex="0">
          <%= f.input :credit, input_html: { placeholder: "Amount of bill : 10.0" }  %>
        </div>
        <div class="tab-pane fade" id="debit" role="tabpanel" aria-labelledby="debit-tab" tabindex="0">
          <%= f.input :debit, input_html: { placeholder: "Amount of bill : 10.0" }  %>
        </div>
      </div>
      <hr class="my-4">
        <%= f.association :user, :label => "To my Amigo : ", :collection => @amigos.sort_by(&:first_name), :label_method => :first_name, :value_method => :id, as: :radio_buttons, required: true %>
        <div class="mt-1 mb-5 d-flex justify-content-center">
          <%= f.submit class:"btn btn-blue-full me-2" %><br>
      <% end %>
          <%= link_to 'Back', trip_wallet_path(@trip, @wallet), class:"btn btn-white" %>
        </div>
     </div>
  </div>
