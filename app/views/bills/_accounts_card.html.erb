<div class="row pe-2 py-2 my-3 bg-transparent rounded-3 shadow-sm">
  <div class="col-3">
    <%= cl_image_tag amigo.photo.key, class:"obj-fit rounded-3 shadow-sm avatar-account" %>
  </div>
  <div class="col-9 ps-3 d-flex flex-column justify-content-center align-items-start">
  
    <h6><strong>Account with <%= amigo.first_name %></strong></h6>
    <% if account > 0 %>
      <p class="text-success m-0 fs-7">You are owed <%= account %>$<br><span class="fs-3"></p>
    <% elsif account == 0 %>
      <p class="text-blue m-0 fs-7">No transactions to balance</p>
    <% else %>
      <p class="text-danger m-0 fs-7">You owe <%= account %>$</p>
    <% end %>
  </div>
</div>