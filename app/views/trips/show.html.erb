  <h1 class="fs-2 pt-4 pb-3 px-3 text-center text-light">Welcome, <%= current_user.first_name %> !</h1>

  <div class="container bg-light px-2 pt-2 pb-4 rounded-4 trip-card position-relative mb-5">
    <div class="row">
      <div class="col-4">
        <div class="d-flex flex-column justify-content-center align-items-center" data-controller="weather">
          <img src="" alt="Weather Icon" data-weather-target="img" height=70 class="">
          <p class="fs-1" data-weather-target="temp"></p>
