<div class="container responsive min-h-100">
  <h1 class="mb-3 pt-4 pb-3 text-center fs-2 text-white">Notifications</h1>
  <div class="min-h-100 p-large">
  <% @user_notifications.each do |user_notif| %>
    <div class="container card-notifications p-1 my-3 rounded-4 shadow-sm bg-white">
      <div class="row p-1 centered-box">
        <div class="col-2 col-md-1">
          <%= cl_image_tag User.find(user_notif.notification.user_id).photo.key, class: "avatar-sm" %>
        </div>
        <div class="col-10 col-md-11 d-flex align-items-center">
          <p class="m-0 ps-4 py-2 pe-2"><%= user_notif.notification.content %></p>
        </div>
      </div>
    </div>
    <% user_notif.read = true %>
    <% user_notif.save! %>
  <% end %>
</div>
</div>
