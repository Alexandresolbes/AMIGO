<div class="container h-100 my-4 px-3">
  <div class="nav nav-tabs tabs-bank mx-2 mb-5 rounded-4 p-0 row justify-content-between" id="myTab" role="tablist">
    <div class="col-4 nav-item" role="presentation">
      <button class="nav-link active" id="wallet-tab" data-bs-toggle="tab" data-bs-target="#wallet-tab-pane" type="button" role="tab" aria-controls="wallet-tab-pane" aria-selected="true">
        <i class="fa-solid fa-wallet"></i>
      </button>
    </div>
    <div class="col-4 nav-item" role="presentation">
      <button class="nav-link" id="create-bill-tab" data-bs-toggle="tab" data-bs-target="#create-bill-tab-pane" type="button" role="tab" aria-controls="create-bill-tab-pane" aria-selected="true">
        <i class="fa-solid fa-pen-to-square"></i>
      </button>
    </div>
  </div>
  <div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="wallet-tab-pane" role="tabpanel" aria-labelledby="wallet-tab" tabindex="0">
      <div class="centered-box flex-column bg-white rounded-4">
      <h1 class="pt-4">My Amigo Bank</h1>
        <img src="https://cdn.dribbble.com/users/347403/screenshots/2660094/_oink.gif" style="width:70%">
        <% if !@wallet.bills.empty? %>
          <div class="pb-3 text-center row">
            <div class="col-6">
              <h3 class="text-secondary mb-3">Balance</h3>
              <p class="text-<% if @wallet.amount > 0 %>success<% else %>danger<% end %> fs-5">
                <%= @wallet.balance%>
              </p>
            </div>
            <div class="col-6">
              <h3 class="text-secondary mb-3">Pending<br></h3>
              <p class="fs-5 fw-normal"><%= @wallet.bills.where(paid: false).count %></p>
            </div>
          </div>
        <% else %>
          <div class="pb-3 text-center">
            <span class="text-danger fs-4 mb-5">No bills yet</span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="tab-pane fade" id="create-bill-tab-pane" role="tabpanel" aria-labelledby="create-bill-tab" tabindex="0">
      <%= render "bills/form", trip: @trip, wallet: @wallet, bill: @bill %>
    </div>
  </div>
</div>