<div class="bg-gradient-img text-light px-3 h-100 min-h-100">
  <div class="container responsive pt-3 p-large">
    <div class="row align-items-center justify-content-between pb-3 border-bottom border-light">
      <div class="col p-0">
        <img src="https://res.cloudinary.com/laura-latuillerie/image/upload/v1662627064/amigo-logo_iagptt.svg" id="logo">
      </div>
      <div class="col p-0 text-end">
        <%= link_to "Create a trip", new_trip_path, class:"btn btn-white" %>
      </div>
    </div>
    <div class="row">
      <h1 class="text-center fs-2 mt-3">All my trips</h1>
      <% @trips.each do |user_trip|%>
        <div class="col-12 mt-2 mb-4 p-4 bg-light text-center border-sm">
          <h2 class="fs-3"><strong><%= link_to user_trip.trip.destination, trip_path(user_trip.trip), class:"text-decoration-none" %></strong></h2>
          <p class="p-0 mb-2 text-dark">
            <i class="fa-solid fa-calendar-days text-dark-blue"></i> <%= user_trip.trip.start_date.strftime("%d %b") %> - <%= user_trip.trip.end_date.strftime("%d %b %Y") %>
          </p>
          <div class="d-flex justify-content-center">
            <h5 class="me-2"><span class="badge rounded-pill bg-dark-blue text-light"><%= user_trip.trip.users.count %> Amigos</span></h5>
            <h5><span class="badge rounded-pill bg-dark-blue text-light"><%= user_trip.trip.activities.count %> Activities</span></h5>
          </div>
          <hr class="text-dark">
          <%= link_to "Manage my trip", trip_path(user_trip.trip) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
