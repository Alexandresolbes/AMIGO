<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for @trip do |f| %>
        <%= f.input :destination %>
        <%= f.input :start_date, as: :string, required: false, html5: true, as: :date %>
        <%= f.input :end_date, as: :string, required: false, html5: true, as: :date %>
        <div class="centered-box mt-4">
          <%= f.submit class:"btn btn-blue" %>
      <% end %>
          <% if @trip.user_trips.find_by_user_id(current_user.id) %>
            <%= button_to "Quit trip", trip_user_trip_path(@trip, @trip.user_trips.find_by_user_id(current_user.id)), method: :delete, class:"btn btn-outline-danger ms-1" %>
          <% else %>
            <%= button_to "Join trip", trip_user_trips_path(user: current_user, trip_id: @trip.id), method: :post, class:"btn btn-outline-success" %>
          <% end %>
          <%= link_to 'Back', trips_path, class:"btn text-secondary ms-1" %>
        </div>
        <!--
          <% if  @trip.user_id == current_user.id %>
            <%= link_to "Destroy Trip", trip_path(@trip), class:"btn btn-danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure ?'} %>
          <% end %>
        -->
    </div>
  </div>
</div>
