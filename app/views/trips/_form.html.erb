<div class="container">
  <div class="row">
    <div class="col"></div>
      <%= simple_form_for @trip do |f| %>
        <%= f.input :destination %>
        <%= f.input :start_date, as: :string, required: false, html5: true, as: :date %>
        <%= f.input :end_date, as: :string, required: false, html5: true, as: :date %>
         <div class="mt-4 mb-5 d-flex justify-content-center">
        <%= f.submit class:"btn btn-blue me-3" %>
      <% end %>
      <%= link_to 'Back', trips_path,class:"btn text-blue"  %>
      </div>
    </div>
  </div>
</div>
