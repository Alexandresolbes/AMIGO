<div class="bg-gradient-blue px-3">
  <h1 class="fs-2 p-4 text-center text-light">Welcome, <%= current_user.first_name %> !</h1>

  <div class="container bg-light px-2 py-4 rounded-4">
    <div class="row">
      <div class="col-5">
        <div class="d-flex flex-column justify-content-center align-items-center" data-controller="weather">
          <img src="" alt="Weather Icon" data-weather-target="img" height=60>
          <p class="fs-1" data-weather-target="temp"></p>
          <div class="col text-start trip-form">
          <% if @trip.user_trips.find_by_user_id(current_user.id) %>
            <%= button_to "🚪", trip_user_trip_path(user: current_user, trip_id: @trip.id, user_trip: @trip.user_trips.find_by_user_id(current_user.id)), method: :delete, class:"btn btn-outline-danger p-2 my-1 rounded-5 border-0 shadow" %>
          <% else %>
            <%= button_to "Join trip", trip_user_trips_path(user: current_user, trip_id: @trip.id), method: :post, class:"btn btn-outline-success p-2" %>
          <% end %>

          <% if  @trip.user_id == current_user.id %>
            <%= link_to "🖋️", edit_trip_path(@trip), class:"btn btn-outline-secondary p-2 my-1 rounded-5 border-0 shadow" %>
            <%= link_to "❌", trip_path(@trip), class:"btn btn-outline-secondary p-2 my-1 rounded-5 border-0 shadow", data: { turbo_method: :delete, turbo_confirm: 'Are you sure ?'} %>
          <% end %>
        </div>
        </div>
      </div>
      <div class="col-7 d-flex flex-column justify-content-center">
        <h3><strong><%= @trip.destination %></strong></h3>
        <p class="p-0 mb-2"><%= @trip.start_date.strftime("%A %d %b %Y") %><br><%= @trip.end_date.strftime("%A %d %b %Y") %></p>
       <h5> <span class="badge text-bg-primary text-light"><%= @trip.users.count %> Amigos 🥳</span></h5>
      </div>
    </div>
    
    
    <hr>
    <div class="row my-2 d-flex justify-content-center">
      <% @trip.users.each do |user| %>
        <div class="col text-center p-0 m-0">
          <%= cl_image_tag user.photo.key, class:"avatar-sm" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container mt-4">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="col-6 text-center btn-activity d-flex justify-content-center align-items-center rounded-4">
        <%= link_to trip_activities_path(@trip), class:"" do %>
        <i class="fa-solid fa-person-hiking icon-size text-light"></i>
        <p class="p-0 m-0 text-light">Activities</p>
        <% end %>
      </div>
      <div class="col-6 text-center btn-random">
        <%= link_to trip_random_wheel_path(@trip) do %>
          <i class="fa-solid fa-dice icon-size"></i>
          <p>Randomizer</p>
        <% end %>
      </div>
    </div>
  </div>
</div>